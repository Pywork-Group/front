{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"],

			"@/layout": ["./layout/*"],
			"@/screens": ["./screens/*"],
			"@/blocks": ["./templates/*"],
			"@/ui": ["./ui/*"],

			"@/api": ["./api/*"],
			"@/app": ["./app/*"],
			"@/assets": ["./assets/*"],
			"@/constants": ["./constants/*"],
			"@/hooks": ["./hooks/*"],
			"@/libs": ["./libs/*"],
			"@/providers": ["./providers/*"],
			"@/schemas": ["./schemas/*"],
			"@/server": ["./server/*"],
			"@/services": ["./services/*"],
			"@/shared": ["./shared/*"],
			"@/store": ["./store/*"],
			"@/utils": ["./utils/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".graphqlrc.yaml",
		"apollo.config.js"
	],
	"exclude": ["node_modules"],
	"files": ["graphql.d.ts"]
}
